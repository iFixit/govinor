{
  "private": true,
  "name": "govinor",
  "description": "A platform to deploy and preview docker containers.",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -o ./app/styles.css",
    "dev": "concurrently -p \"[{name}]\" -n \"remix,workers,tailwind,redis\" -c \"blue.bold,magenta.bold,green.bold,red.bold\" \"npm:dev:remix\" \"npm:dev:workers\" \"npm:dev:tailwind\" \"npm:dev:redis\"",
    "dev:remix": "cross-env NODE_ENV=development remix dev",
    "dev:tailwind": "tailwindcss -o ./app/styles.css --watch",
    "dev:workers": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register -r dotenv/config workers/index.ts",
    "dev:redis": "docker compose up",
    "db:reset": "prisma migrate reset",
    "db:seed": "prisma db seed",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate-deploy": "prisma migrate deploy",
    "db:studio": "npx prisma studio",
    "setup": "prisma migrate dev && prisma db seed",
    "postinstall": "remix setup node",
    "start": "npm run start:remix & npm run start:workers",
    "start:remix": "remix-serve build",
    "start:workers": "cross-env NODE_ENV=production ts-node --transpile-only -r tsconfig-paths/register -r dotenv/config workers/index.ts",
    "deploy": "./deploy.sh"
  },
  "dependencies": {
    "@headlessui/react": "1.6.6",
    "@heroicons/react": "1.0.6",
    "@prisma/client": "4.1.1",
    "@remix-run/node": "1.6.5",
    "@remix-run/react": "1.6.5",
    "@remix-run/serve": "1.6.5",
    "@remix-run/server-runtime": "1.6.5",
    "bullmq": "1.63.0",
    "dayjs": "1.11.4",
    "dotenv": "10.0.0",
    "get-port": "5.1.1",
    "ioredis": "4.28.2",
    "node-fetch": "2.6.6",
    "pretty-bytes": "5.6.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "remix": "1.6.5",
    "tiny-invariant": "1.2.0"
  },
  "devDependencies": {
    "@faker-js/faker": "7.3.0",
    "@remix-run/dev": "1.6.5",
    "@types/ioredis": "4.28.5",
    "@types/react": "17.0.24",
    "@types/react-dom": "17.0.9",
    "concurrently": "6.4.0",
    "cross-env": "7.0.3",
    "prisma": "4.1.1",
    "tailwindcss": "3.1.6",
    "ts-node": "10.4.0",
    "ts-node-dev": "1.1.8",
    "tsconfig-paths": "3.12.0",
    "typescript": "4.6.4",
    "wait-on": "6.0.0"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "prisma": {
    "seed": "ts-node --require tsconfig-paths/register prisma/seed.ts"
  }
}
